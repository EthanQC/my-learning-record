    email admin@qingverse.com   # ← 换成你自己的可用邮箱
}

{$DOMAIN} {
  encode zstd gzip

  # 1) /api/* 剥掉前缀后再转发到后端
  handle_path /api/* {
    reverse_proxy http://api:9000
  }

  # 2) 健康检查直接打到后端 /health
  handle /health {
    reverse_proxy http://api:9000
  }

  # 3) 其余都走前端
  handle {
    reverse_proxy http://web:3000
  }

  header {
    X-Frame-Options "SAMEORIGIN"
    Referrer-Policy "strict-origin-when-cross-origin"
  }
}