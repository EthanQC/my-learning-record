# Docker Hub（仅构建推送时需要，服务器部署不需要 DOCKER_PAT）
DH_USER=your-dockerhub-username
REGISTRY=
TAG=
DOCKER_PAT=your-dockerhub-personal-access-token

# 域名配置
DOMAIN=yourdomain.com, www.yourdomain.com
CORS_ORIGIN=https://yourdomain.com
PUBLIC_API_BASE_URL=https://yourdomain.com

# MySQL (Docker)
MYSQL_ROOT_PASSWORD=root_password_here
MYSQL_USER=dev_user
MYSQL_PASSWORD=dev_user_pass
MYSQL_DATABASE=qingverse
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306

# API
API_ADDR=127.0.0.1:9000
ADMIN_TOKEN=your-admin-token-for-protected-endpoints

# Web
NEXT_PUBLIC_API_BASE=http://localhost:9000
NEXT_PUBLIC_API_URL=http://localhost:9000/api
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Qingverse