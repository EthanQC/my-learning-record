{
    "schemes": [
        "http",
        "https"
    ],
    "swagger": "2.0",
    "info": {
        "description": "个人学习记录网站 API - 支持博客文章、笔记和留言管理",
        "title": "Qingverse API",
        "contact": {
            "name": "Ethan",
            "email": "2367918546@qq.com"
        },
        "version": "1.0"
    },
    "host": "localhost:9000",
    "basePath": "/api",
    "paths": {
        "/categories": {
            "get": {
                "description": "获取所有分类及文章数量统计",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "文章管理"
                ],
                "summary": "获取分类列表",
                "responses": {
                    "200": {
                        "description": "分类列表",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/model.Category"
                            }
                        }
                    },
                    "500": {
                        "description": "服务器错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/contact": {
            "get": {
                "security": [
                    {
                        "AdminAuth": []
                    }
                ],
                "description": "管理员查看所有留言(需要 Token)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "留言管理"
                ],
                "summary": "查看留言列表",
                "parameters": [
                    {
                        "type": "string",
                        "description": "管理员 Token",
                        "name": "X-Admin-Token",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "留言列表",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/model.Contact"
                            }
                        }
                    },
                    "401": {
                        "description": "未授权",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "服务器错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "post": {
                "description": "用户提交联系留言",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "留言管理"
                ],
                "summary": "提交留言",
                "parameters": [
                    {
                        "description": "留言内容",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.ContactInput"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "创建成功",
                        "schema": {
                            "$ref": "#/definitions/model.Contact"
                        }
                    },
                    "400": {
                        "description": "参数错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "服务器错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/posts": {
            "get": {
                "description": "获取所有文章元信息,支持分类筛选",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "文章管理"
                ],
                "summary": "获取文章列表",
                "parameters": [
                    {
                        "type": "string",
                        "description": "分类筛选(如: murmurs-and-reflection)",
                        "name": "category",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "文章列表",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/model.PostMeta"
                            }
                        }
                    },
                    "500": {
                        "description": "服务器错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/stats": {
            "get": {
                "description": "获取文章总数、分类数、最近更新等统计信息",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "统计"
                ],
                "summary": "获取网站统计",
                "responses": {
                    "200": {
                        "description": "统计数据",
                        "schema": {
                            "$ref": "#/definitions/model.Stats"
                        }
                    },
                    "500": {
                        "description": "服务器错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "model.Category": {
            "type": "object",
            "properties": {
                "count": {
                    "type": "integer",
                    "example": 42
                },
                "label": {
                    "type": "string",
                    "example": "碎碎念"
                },
                "name": {
                    "type": "string",
                    "example": "murmurs-and-reflection"
                }
            }
        },
        "model.Contact": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string",
                    "example": "2025-05-07T10:30:00Z"
                },
                "email": {
                    "type": "string",
                    "example": "zhangsan@example.com"
                },
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "message": {
                    "type": "string",
                    "example": "你好,我想问..."
                },
                "name": {
                    "type": "string",
                    "example": "张三"
                }
            }
        },
        "model.ContactInput": {
            "type": "object",
            "required": [
                "email",
                "message",
                "name"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "maxLength": 200,
                    "example": "zhangsan@example.com"
                },
                "message": {
                    "type": "string",
                    "minLength": 1,
                    "example": "你好,我想问..."
                },
                "name": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 1,
                    "example": "张三"
                }
            }
        },
        "model.PostMeta": {
            "type": "object",
            "properties": {
                "category": {
                    "type": "string",
                    "example": "murmurs-and-reflection"
                },
                "date": {
                    "type": "string",
                    "example": "2025-05-07T00:00:00Z"
                },
                "slug": {
                    "type": "string",
                    "example": "blog/murmurs-and-reflection/2025.5.7"
                },
                "summary": {
                    "type": "string",
                    "example": "今天学习了..."
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "碎碎念",
                        "日常"
                    ]
                },
                "title": {
                    "type": "string",
                    "example": "碎碎念"
                }
            }
        },
        "model.Stats": {
            "type": "object",
            "properties": {
                "last_update": {
                    "type": "string",
                    "example": "2025-05-07T00:00:00Z"
                },
                "recent_posts": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/model.PostMeta"
                    }
                },
                "total_categories": {
                    "type": "integer",
                    "example": 5
                },
                "total_posts": {
                    "type": "integer",
                    "example": 128
                }
            }
        }
    }
}